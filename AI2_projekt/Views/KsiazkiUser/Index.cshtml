@model IEnumerable<AI2_project.Models.Ksiazki>

@{
    if (Session["userID"] == null)
    {
        Response.Redirect("~/Ksiazki/Index");
    }
    ViewBag.Title = "Index";
}
@if (Session["userID"] != null && (Session["roleID"].Equals(2) || Session["roleID"].Equals(3)))
{
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tytuł)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rok_wydania)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ilość_na_stanie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kategorie.Kategoria)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tytuł)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rok_wydania)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ilość_na_stanie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategorie.Kategoria)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
else
{
    Response.Redirect("~/Ksiazki/Index");
}