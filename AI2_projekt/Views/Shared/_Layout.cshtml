<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                    @Html.ActionLink("Bilbioteka", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Lista Książek", "Index", "Ksiazki")</li>
                    @if (Session["userID"] != null)
                    {
                        <li>@Html.ActionLink("Wypozyczone", "Index", "Wypozyczone")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Zaloguj się", "Index", "Login")</li>
                    }
                    @if ((Session["userID"] != null) && (Session["roleID"].Equals(2)))
                    {
                        <li>@Html.ActionLink("Wypozyczanie", "Index", "Wypozycz")</li>
                        <li>@Html.ActionLink("Karty", "Index", "Karty")</li>
                        <li>@Html.ActionLink("Książki", "Index", "KsiazkiUser")</li>
                        <li>@Html.ActionLink("Klienci biblioteki", "Index", "Osoby")</li>
                        <li>@Html.ActionLink("Adresy", "Index", "Adres")</li>
                        <li>@Html.ActionLink("Kategorie", "Index", "Kategorie")</li>
                    }
                    @if ((Session["userID"] != null) && (Session["roleID"].Equals(3)))
                    {
                        <li>@Html.ActionLink("Wypozyczanie", "Index", "Wypozycz")</li>
                        <li>@Html.ActionLink("Karty", "Index", "Karty")</li>
                        <li>@Html.ActionLink("Książki", "Index", "KsiazkiUser")</li>
                        <li>@Html.ActionLink("Klienci biblioteki", "Index", "Osoby")</li>
                        <li>@Html.ActionLink("Adresy", "Index", "Adres")</li>
                        <li>@Html.ActionLink("Kategorie", "Index", "Kategorie")</li>
                        <li>@Html.ActionLink("Role", "Index", "Role")</li>
                    }
                    <li>@Html.ActionLink("O nas", "About", "Home")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @if (Session["userID"] != null) {
                <a href="@Url.Action("LogOut", "Login")">Wyloguj</a>
            }
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
