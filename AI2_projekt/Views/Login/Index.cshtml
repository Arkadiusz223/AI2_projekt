@model AI2_project.Models.Karta

@{
    ViewBag.Title = "Logowanie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .field-validation-error {
        color: red;
    }
</style>
<div>
    <div>
        @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
        {
            <table>
                <tr>
                    <td></td>
                    <td>Logowanie: </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.Numer_karty)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.Numer_karty)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.Numer_karty)</td>
                </tr>
                <tr>
                    <td>@Html.LabelFor(model => model.Haslo)</td>
                    <td>@Html.EditorFor(model => model.Haslo)</td>
                </tr>
                <tr>
                    <td></td>
                    <td>@Html.ValidationMessageFor(model => model.Numer_karty)</td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="name" value="Zaloguj" />
                    </td>
                </tr>
            </table>

        }
    </div>
</div>